<main class="form-signin text-center">
    <form id="signup-form">
        <h1 class="h3 p-2">Sign up here!</h1>

        <div class="form-floating m-3">
            <input type="text" class="form-control" id="username-signup" placeholder="Username" autofocus="true">
            <label for="username-signup">Username</label>
        </div>
        <div class="form-floating m-3">
            <input type="password" class="form-control" id="password-signup" placeholder="Password" autofocus="true">
            <label for="password-signup">Password</label>
        </div>

        <button class="w-100 btn btn-lg btn-info m-3 submit" type="submit">Sign up</button>
        <a class="login-link" href="/login">Log in instead</a>
    </form>
</main>

<script src="/js/signup.js"></script>