                <p class="card-text poppins" id="description">{{post.description}}</p>
                <div class="text-muted space-between">
                    <ul>
                        <li>Created by
                            {{post.user.username}}
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        {{/each}} --}}
        {{/if}}
    </div>
</section>
